@model EditProjectViewModel
<section id="edit-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button data-type="close" data-target="#edit-project-modal" class="btn-close"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <div class="card-body">
            <div class="project-image">
                <img src="~/images/icons/Project-Image.svg">
            </div>
            <form class="add-project-form" asp-controller="" asp-action="" method="post" novalidate>
                <div class="form-group">
                    <label class="form-label">Project Name</label>
                    <input class="form-field" type="text" placeholder="Project Name" />
                </div>
                <div class="form-group">
                    <label class="form-label">Client Name</label>
                    <input class="form-field" type="text" placeholder="Client Name" />
                </div>
                <div class="form-group">
                    <label class="form-label">Descrription</label>
                    <textarea class="form-field"></textarea>
                </div>
                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input class="form-field" type="date" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input class="form-field" type="date" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Budget</label>
                    <div class="form-input-icon">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input class="form-field" type="text" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Project Status</label>
                    <div class="form-select" data-placeholder="Choose a status">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach(var option in Model.Statuses)
                            {
                            <li class="form-select-option" data-value="@option.Value">@option.Text</li>   
                            }

                        </ul>
                        <input type="hidden" name="client-select-value" />
                    </div>
                </div>
                <button class="btn btn-blue" type="submit">Save</button>
            </form>

        </div>
    </div>
</section>