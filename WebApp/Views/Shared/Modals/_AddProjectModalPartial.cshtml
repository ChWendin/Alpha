@model AddProjectViewModel
<section id="add-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button data-type="close" data-target="#add-project-modal" class="btn-close"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <div class="card-body">
            <div class="project-image">
                <img src="~/images/icons/Project-Image.svg">
            </div>
            <form class="add-project-form" asp-controller="Projects" asp-action="Add" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="ProjectName" class="form-label"></label>
                    <input asp-for="ProjectName" class="form-field" placeholder="Project Name" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClientName" class="form-label">Client Name</label>
                    <input asp-for="ClientName" class="form-field" type="text" placeholder="Client Name" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectDescription" class="form-label"></label>
                    <textarea asp-for="ProjectDescription" class="form-field" placeholder="Description"></textarea>
                </div>
                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" type="date" class="form-field" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" type="date" class="form-field" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Budget" class="form-label"></label>
                    <div class="form-input-icon">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input asp-for="Budget" class="form-field" placeholder="0" />
                    </div>
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
                <button class="btn btn-blue" type="submit">Create</button>
            </form>

        </div>
    </div>
</section>

@await Html.PartialAsync("_ValidationScripts")